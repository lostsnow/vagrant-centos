{
    "variables": {
    },
    "builders": [{
        "type": "virtualbox-iso",
        "headless": true,
        "guest_os_type": "RedHat_64",
        "iso_url": "CentOS-7-x86_64-NetInstall-1511.iso",
        "iso_checksum": "99d305fa40ec9e28ef8450c3bcc45f85",
        "iso_checksum_type": "md5",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_wait_timeout": "1800s",
        "vm_name": "CentOS 7 Vagrant",
        "http_directory": "./",
        "boot_wait": "10s",
        "boot_command": [
            "<esc><wait>",
            "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/base/ks.cfg",
            "<enter><wait>"
        ],
        "shutdown_command": "echo 'vagrant' |sudo -S shutdown -P now",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--usb", "off"],
            ["modifyvm", "{{.Name}}", "--audio", "none"]
        ]
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "echo skip sudo yum -y install epel-release gcc make bzip2 kernel-headers kernel-devel dkms",
            "echo skip sudo yum -y clean all",
            "sudo mount -o loop /home/vagrant/VBoxGuestAdditions.iso /mnt",
            "sudo sh /mnt/VBoxLinuxAdditions.run --nox11 || true",
            "sudo umount /mnt",
            "echo skip sudo /etc/rc.d/init.d/vboxadd setup",
            "sudo rm -f /home/vagrant/VBoxGuestAdditions.iso"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "output": "build/centos-7-x86_64-{{.Provider}}-base.box",
        "vagrantfile_template": "Vagrantfile"
    }]
}
